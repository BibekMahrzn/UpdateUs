<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimen_2x"
    android:background="@android:color/white"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="@dimen/dimen_2x1"
    card_view:cardElevation="@dimen/dimen_2x1"
    card_view:cardUseCompatPadding="true"
    card_view:contentPaddingBottom="@dimen/dimen_2x"
    card_view:pressedTranslationZ="@dimen/dimen_1x">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_package_image"
            android:layout_width="400dp"
            android:layout_height="300dp"
            android:scaleType="fitXY"
            android:src="@drawable/construction" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_package_receiver_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_2x"
                android:layout_marginRight="@dimen/dimen_2x"
                android:layout_marginTop="@dimen/dimen_3x"
                android:text="SatoBato Road Construction"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_sub_heading_1" />

            <TextView
                android:id="@+id/txt_package_receiver_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_2x"
                android:layout_marginRight="@dimen/dimen_2x"
                android:text=""
                android:textColor="@color/semi_color"
                android:textSize="@dimen/text_size_body" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>